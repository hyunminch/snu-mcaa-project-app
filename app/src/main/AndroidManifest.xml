<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.snumcaa">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".TextEditActivity" />
        <activity
            android:name="io.github.snumcaa.ui.authnz.AuthnzActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile_profile"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.SlidrActivityTheme" />
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_profile_setting"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.SlidrActivityTheme" />
        <activity
            android:name=".FriendActivity"
            android:label="@string/title_activity_profile_friend"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.SlidrActivityTheme">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".FriendSearchResultActivity" />
        </activity>
        <activity
            android:name=".FriendSearchResultActivity"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.SlidrActivityTheme">
            <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/search" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"/>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" />
    </application>

</manifest>